<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolbarImageButton">
        <item name="android:layout_width">@dimen/toolbar_image_button_size</item>
        <item name="android:layout_height">@dimen/toolbar_image_button_size</item>
        <item name="android:background">@drawable/background_pressed_state</item>
        <item name="android:layout_margin">@dimen/activity_margin_small</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
